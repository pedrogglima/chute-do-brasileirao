.col-12.col-xs-12.col-sm-12.col-md-12.col-lg-6
  .card
    .info
      .row
        .col-md-12
          %span.text=format_datetime(match[:date].to_datetime)
          %span -
          %span.text=format_id_match(match[:id_match])
    .teams
      .row
        .col-4
          .team
            .image
              = image_tag(match[:team_avatar])
            %span.name=format_short_name(match[:team_name])
        .col-4
          .time 
            %span.badge.badge-default=format_time(match[:date].to_datetime)
        .col-4
          .team
            .image
              = image_tag(match[:opponent_avatar])
            %span.name=format_short_name(match[:opponent_name])
    .place
      .row
        .col-md-12
          %span.text=match[:place]
    .btn-bet
      = link_to new_match_bet_path(match[:id]), class: "btn btn-success btn-custom" do
        %i.fas.fa-futbol
        %span Chutar
        
        
      