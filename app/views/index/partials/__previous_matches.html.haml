.swiper-slide.component-today-matches
  .card
    .info
      .row
        .col-md-12
          %span.date=format_datetime(match.date)
          %span -
          %span.match=format_id_match(match.id_match)
    .teams
      .row
        .col-4
          .team
            .image
              %img{"data-src-url" => url_for(match.team.avatar), class: "swiper-lazy"}
              .swiper-lazy-preloader.swiper-lazy-preloader-black.custom-spinner
            %span.name=format_short_name(match.team.name)
        .col-4
          .score
            - if score?(match.team_score, match.opponent_score)
              %span.badge.badge-default=format_score(match.team_score, match.opponent_score)
            - else
              %i.fas.fa-clock
        .col-4
          .team
            .image
              %img{"data-src-url" => url_for(match.opponent.avatar), class: "swiper-lazy"}
              .swiper-lazy-preloader.swiper-lazy-preloader-black.custom-spinner
            %span.name=format_short_name(match.opponent.name)
    .place
      .row
        .col-md-12
          %span.text=match.place
