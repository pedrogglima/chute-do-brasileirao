.swiper-slide.component-today-matches
  .row
    .col-3
    .col-6
      .card
        .info
          .row
            .col-md-12
              - if match.date
                %span.text=MatchDecorator.new(match).display_date
                %span -
                %span.text=MatchDecorator.new(match).display_id_match
              - else
                %span aguardando
                %span -
                %span.text=MatchDecorator.new(match).display_id_match
        .teams
          .row
            .col-4
              .team
                .image
                  = image_tag(match.team.avatar)
                %span.name=TeamDecorator.new(match.team).display_short_name
            .col-4
              .time 
                - if match.date
                  %span.badge.badge-default=MatchDecorator.new(match).display_time
                - else
                  %i.fas.fa-clock                
            .col-4
              .team
                .image
                  = image_tag(match.opponent.avatar)
                %span.name=TeamDecorator.new(match.opponent).display_short_name
        .place
          .row
            .col-md-12
              - if match.place
                %span.text=match.place
              - else
                %span
        .btn-bet
          %span.badge.badge-secondary=sanitize '<i class="fas fa-clock"></i> Aguardando', tags: %w(i)
    .col-3