= flash_message_row

.row
  .col-md-8
    %section.mb-5 
      %h1.title Jogos de Hoje
      - if @today_matches.empty?
        .match-message
          .row
            %span Não há jogos hoje.
      - else
        .component-today-matches
          .row
            = render partial: 'index/partials/today_matches', collection: @today_matches, as: :match, cached: true
    
    %section.mb-5
      - unless @next_matches.empty?
        %h1.title Próximos Jogos
        
        .row
          .col-12
            .swiper-container.swiper-container-initialized.swiper-container-horizontal{ data: { controller: "carousel" }, 'data-carousel-options-value': '{ "navigation": { "nextEl": ".swiper-button-next", "prevEl": ".swiper-button-prev" } }' }
              .swiper-wrapper
                = render partial: 'index/partials/next_matches', collection: @next_matches, as: :match, cached: true
              .swiper-button-next
              .swiper-button-prev

    %section.mb-5
      - unless @previous_matches.empty?
        %h1.title Jogos Anteriores
        
        .row
          .col-12
            .swiper-container.swiper-container-initialized.swiper-container-horizontal{ data: { controller: "carousel" }, 'data-carousel-options-value': '{ "navigation": { "nextEl": ".swiper-button-next", "prevEl": ".swiper-button-prev" } }' }
              .swiper-wrapper
                = render partial: 'index/partials/previous_matches', collection: @previous_matches, as: :match, cached: true
              .swiper-button-next
              .swiper-button-prev

  = sidebar