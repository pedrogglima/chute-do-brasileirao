= flash_message_row

.row
  .col-md-3
  .col-md-6
    .card
      .card-header
        %span Cadastrar-se
      .card-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "layouts/shared/error_messages", resource: resource

          .form-group
            = f.label :email, "Email"
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"

          .form-group
            = f.label :first_name, "Nome"
            = f.email_field :first_name, class: "form-control"

          .form-group
            = f.label :last_name, "Sobrenome"
            = f.email_field :last_name, class: "form-control"

          .form-group
            = f.label :password, "Senha"
            = f.password_field :password, autocomplete: "new-password", class: "form-control"

          .form-group
            = f.label :password_confirmation, "Confirmação Senha"
            = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
          
          = f.submit "Entrar", class: "btn btn-success btn-sm btn-block" 
          = render "devise/shared/links"
  .col-md-3

