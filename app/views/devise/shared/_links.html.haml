.link-wrapper
  - if controller_name != 'sessions' 
    = link_to "Entrar", new_session_path(resource_name), class: "link-block"

  - if devise_mapping.registerable? && controller_name != 'registrations' 
    = link_to "Cadastrar-se", new_registration_path(resource_name), class: "link-block"

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' 
    = link_to "Esqueci minha senha", new_password_path(resource_name), class: "link-block" 

  - if devise_mapping.omniauthable? 
    - resource_class.omniauth_providers.each do |provider| 
      = link_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "link-block"
    

